<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login Portal</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">  <!-- navbar -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

  <style>
    table, td, th {  
      border: 1px solid #ddd;
      text-align: left;
    }
    
    table {
      border-collapse: collapse;
      width: 100%;
     
    }
    .table-data{
        position: center;
      left:25px;
      top:100px;
    }


    th, td {
      padding: 20px;
    }
    </style>
</head>
<body>


<!-- navbar -->

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Admin Management</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#"><span class="glyphicon glyphicon-user"></span>Hello,<%=name %> </a></li>
    </ul>
  </div>
</nav>



<!-- Add admin form -->

<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">New Admin details</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body mx-3">
        <form action="insertData" method="POST">
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="text" name="firstname" placeholder="First Name" required id="orangeForm-name" class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-email">First Name</label>
          </div>
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="text" name="lastname" placeholder="Last Name" required class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-email">Last Name</label>
          </div>
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="email" name="email" placeholder="Email" required class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-email">Email</label>
          </div>
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="text" name="role" placeholder="Role" required class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-email">Role</label>
          </div>
          <div class="md-form mb-4">
            <i class="fas fa-lock prefix grey-text"></i>
            <input type="text" name="password" placeholder="Password" required class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-pass">Password</label>
          </div>
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="number" name="actions" placeholder="Actions" required class="form-control validate">
            <label data-error="wrong" data-success="right" for="orangeForm-email">Actions</label>
          </div>
          <button type="submit" class="btn btn-deep-orange" >Add </button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalRegisterForm">+ Add new admin</a>
</div>
  
<div class="table-data">
  <div class="row">
    <div class="column">
      <label for="name" class="col-lg-2 control-label"><h2>Admin List</h2></label>
    </div>
  </div>
   <table class="table table-striped" border="1">
        <tr>
            <th>S.N</th>
            <th>Full Name</th>
            <th>Last Name</th>
            <th>email</th>
            <th>role</th>
            <th>actions</th>
        </tr>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.firstname %></td>
            <td><%=data.lastname %></td>
            <td><%=data.email %></td>
            <td><%=data.role %></td>
            <td><%=data.actions %></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
</html>